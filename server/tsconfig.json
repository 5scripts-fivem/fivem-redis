{
    "compilerOptions": {
      "target": "ES2020",
      "strict": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "module": "CommonJS",
      "types": ["@citizenfx/server", "@types/node"],
      "lib": ["ES2020"],
      // @types/node & @citizenfx/server conflicts
      "skipLibCheck": true
    },
    "include": ["./**/*"],
    "exclude": ["**/node_modules", "**/__tests__/*"]
  }